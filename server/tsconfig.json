{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language and Environment */
    "target": "ES2020",                // Modern JS features, safe for Node 14+
    "module": "commonjs",              // Stick with CommonJS for Express projects
    "moduleResolution": "node",        // Node-style module resolution
    "esModuleInterop": true,           // Allows import default from CommonJS
    "forceConsistentCasingInFileNames": true,

    /* Node.js types */
    "lib": ["es2020"],
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
